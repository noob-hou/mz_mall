
.login {
		padding-top: 110rpx;
		display: -webkit-box;
		display: -webkit-flex;
		display: flex;
		-webkit-box-orient: vertical;
		-webkit-box-direction: normal;
		-webkit-flex-direction: column;
		        flex-direction: column;
		-webkit-box-align: center;
		-webkit-align-items: center;
		        align-items: center;
}
.login-logo {
		width: 250rpx;
		height: 250rpx;
		margin-bottom: 30rpx;
}
.tel {
		position: relative;
		width: 550rpx;
		height: 110rpx;
		border-bottom: 1px solid #e5e5e5;
		margin-bottom: 60rpx;
}
.getCode{
	position: absolute;
	right: 0;
	bottom: 0;
}
.tel input {
		width: 100%;
		height: 100%;
}
.button {
		width: 550rpx;
		height: 86rpx;
		margin-bottom: 40rpx;
}
.register {
		display: -webkit-box;
		display: -webkit-flex;
		display: flex;
}
.register view:nth-child(1) {
		color: #666;
		margin-right: 10rpx;
}
.register view:nth-child(2) {
		color: #22b9ee;
}


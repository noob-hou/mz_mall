
.imgdetail-title{
    width: 100%;
    height: 80rpx;
    font-weight: bold;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
}
.imgdetail-title>view{
    -webkit-box-flex: 1;
    -webkit-flex: 1;
            flex: 1;
    text-align: center;
}
.active-color{
    color: #00c3f5;
    font-weight: bold;
}
.shop-params{
    padding: 20rpx 30rpx;
}
.basic-info{
    background-color: #f7f7f7;
    color: #000;
    width: 100%;
    height: 75rpx;
    line-height: 75rpx;
    padding-left: 30rpx;
    font-weight: bold;
    text-align: center;
}
.params-item{
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    height: 100rpx;
    width: 100%;
    border: 1px solid #e9e9e9;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    font-size: 24rpx;
}
.params-item-left{
    -webkit-box-flex: 4;
    -webkit-flex: 4;
            flex: 4;
    text-align: center;
    border-right: 1px solid #e9e9e9;
    color: #999;
    height: 100%;
    line-height: 100rpx;
}
.params-item-right{
    height: 100%;
    -webkit-box-flex: 7;
    -webkit-flex: 7;
            flex: 7;
    text-align: center;
     line-height: 100rpx;
    border-right: 1px solid #e9e9e9;
    color: #000;
    overflow: hidden;
}

